{
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "airbnb",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "plugins": [
    "eslint-plugin-react-hooks",
    "eslint-plugin-import",
    "jest",
    "prettier",
    "react"
  ],
  "settings": {
    "react": {
      "version": "detect",
      "plugins": [
        "react",
        "jest"
      ]
    },
    "next": {
      "rootDir": [
        "apps/**/*",
        "packages/**/*"
      ],
      "ignorePatterns": [
        "/dist/**/*.js",
        "/dist/**/*.jsx",
        "/dist/**/*.ts",
        "/dist/**/*.tsx",
        "/__mocks__/**/*.js",
        "/__mocks__/**/*.jsx",
        "/__mocks__/**/*.ts",
        "/__mocks__/**/*.tsx"
      ],
      "plugins": [
        "react",
        "jest"
      ]
    }
  },
  "ignorePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**",
    "**/tmp/**",
    "**/.next/**",
    "**/build/**",
    "**/jsconfig.json",
    "**/package.json",
    "**/.storybook/**",
    "**/.eslintrc.js"
  ],
  "rules": {
    "max-len": [
      2,
      150,
      4,
      {
        "ignoreUrls": true,
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "no-console": 1, // Means warning
    "prettier/prettier": 0, // Means no error
    "import/no-extraneous-dependencies": [
      0,
      {
        "devDependencies": true,
        "packageDir": "./"
      }
    ],
    "no-restricted-imports": [
      "error"
    ],
    "react/function-component-definition": [
      2,
      {
        "namedComponents": "arrow-function",
        "unnamedComponents": "arrow-function"
      }
    ],
    "allowExpressions": 0,
    "arrow-body-style": 0, // TODO: take a look at this rule and see if we can remove it
    "no-restricted-exports": 0, // TODO: take a look at this rule and see if we can remove it
    "import/prefer-default-export": "off"
  }
}